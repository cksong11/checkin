<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop">

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dimen_40"
        android:orientation="vertical"
        android:background="@color/dialog_transparent">
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_20"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/dialog_dark_transparent"
            >
            <ImageView
                android:id="@+id/img_back"
                android:padding="@dimen/dimen_4"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:src="@drawable/ic_baseline_arrow_back_ios_24">

            </ImageView>

            <TextView
                android:gravity="center"
                android:text="@string/app_title"
                android:textSize="@dimen/font_24"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_phone"
                android:padding="@dimen/dimen_4"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:src="@drawable/phone_call">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/dimen_40"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/dimen_50"
                android:paddingHorizontal="@dimen/dimen_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/welcome"
                android:fontFamily="@font/norican"
                android:textSize="@dimen/font_72">
            </TextView>

            <RelativeLayout
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_20"
                    android:background="@drawable/dialog_backspace_round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_20"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/welcome_1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_24">

                        </TextView>
                        <TextView
                            android:id="@+id/txt_user_name"
                            android:layout_marginLeft="@dimen/dimen_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_24">

                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_welcome"
                        android:layout_marginVertical="@dimen/dimen_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:text="@string/description_welcome">

                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_build_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/company_name"
                            android:textColor="@color/btn_light_gray">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_40"
                    android:gravity="center"
                    android:background="@drawable/drawable_circle">
                    <ImageView
                        android:layout_marginTop="@dimen/dimen_4"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:src="@drawable/heart">

                    </ImageView>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_40"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/txt_submit"
                android:layout_marginTop="@dimen/dimen_30"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:textStyle="bold"
                android:textSize="@dimen/font_18"
                android:background="@drawable/btn_language"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/next">

            </TextView>
            <TextView
                android:gravity="center"
                android:text="@string/app_title"
                android:textSize="@dimen/font_24"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>





</RelativeLayout>