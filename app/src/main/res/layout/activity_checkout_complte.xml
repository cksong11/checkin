<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_20"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/img_back"
                android:padding="@dimen/dimen_4"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:src="@drawable/ic_baseline_arrow_back_black_ios_24">

            </ImageView>

            <TextView
                android:gravity="center"
                android:text="@string/app_title"
                android:textSize="@dimen/font_24"
                android:textColor="@color/language_gradient_end"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/row_logo"/>

            <ImageView
                android:id="@+id/img_phone"
                android:padding="@dimen/dimen_4"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:src="@drawable/phone_call_black">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/dimen_30"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/dimen_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/complete_checkout"
                android:textColor="@color/black"
                android:textSize="@dimen/font_24"
                android:textAlignment="center">

            </TextView>


            <LinearLayout
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:padding="@dimen/dimen_20"
                    android:background="@drawable/drawable_gray_round"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description_finish_check"
                        android:textAlignment="center"/>


                </LinearLayout>


            </LinearLayout>



            <TextView
                android:id="@+id/txt_submit"
                android:layout_marginHorizontal="@dimen/dimen_30"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60"
                android:background="@drawable/btn_language"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/font_21"
                android:text="@string/title_check_out">

            </TextView>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/dialog_ask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialog_transparent"
        android:gravity="center">
        <LinearLayout
            android:layout_margin="@dimen/dimen_30"
            android:padding="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dialog_round"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/ask_move_top"
                android:textColor="@color/white">
            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_cancel"
                    android:padding="@dimen/dimen_4"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_green"
                    android:text="@string/cancel">

                </TextView>
                <TextView
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:id="@+id/txt_next"
                    android:padding="@dimen/dimen_4"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_green"
                    android:text="@string/ok">

                </TextView>
            </LinearLayout>




        </LinearLayout>

    </LinearLayout>




</RelativeLayout>