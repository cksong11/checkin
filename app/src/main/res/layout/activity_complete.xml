<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dimen_10"
        android:paddingHorizontal="@dimen/dimen_20"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/img_back"
            android:padding="@dimen/dimen_4"
            android:layout_width="@dimen/dimen_28"
            android:layout_height="@dimen/dimen_28"
            android:src="@drawable/ic_baseline_arrow_back_black_ios_24">

        </ImageView>

        <TextView
            android:gravity="center"
            android:text="@string/app_title"
            android:textSize="@dimen/font_24"
            android:textColor="@color/language_gradient_end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/row_logo"/>

        <ImageView
            android:id="@+id/img_phone"
            android:padding="@dimen/dimen_4"
            android:layout_width="@dimen/dimen_32"
            android:layout_height="@dimen/dimen_32"
            android:src="@drawable/phone_call_black">

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dimen_40"
        android:layout_marginBottom="@dimen/dimen_30"
        android:paddingHorizontal="@dimen/dimen_40"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="@dimen/dimen_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finish_check"
            android:textColor="@color/black"
            android:textSize="@dimen/font_24"
            android:textAlignment="center">

        </TextView>

        <TextView
            android:id="@+id/txt_room_no"
            android:layout_marginTop="@dimen/dimen_70"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/font_21"
            android:textAlignment="center"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textColor="@color/black"
                android:textSize="@dimen/font_21"
                android:textAlignment="center"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/txt_room_password"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/language_gradient_end"
                android:textSize="@dimen/font_30"
                android:textAlignment="center"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_50"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/btn_light_gray"
            android:padding="@dimen/dimen_30"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_room_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_password_detail">

            </TextView>

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/btn_light_gray"
        android:paddingVertical="@dimen/dimen_20"
        android:paddingHorizontal="@dimen/dimen_40">

        <TextView
            android:id="@+id/txt_move_top"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dimen_60"
            android:background="@drawable/btn_white_round"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/font_21"
            android:text="@string/back_top">

        </TextView>



    </LinearLayout>

</LinearLayout>