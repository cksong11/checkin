<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop">

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dimen_40"
        android:orientation="vertical"
        android:background="@color/dialog_transparent">
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_150"
        android:layout_marginHorizontal="@dimen/dimen_30">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_code"
            android:textColor="@color/white"
            android:textSize="@dimen/font_24">

        </TextView>
        <TextView
            android:layout_marginVertical="@dimen/dimen_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="@string/description_enter_code">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/txt_submit"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:textStyle="bold"
            android:textSize="@dimen/font_18"
            android:background="@drawable/btn_gray_round"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/title_check_in"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dimen_10"
        android:paddingHorizontal="@dimen/dimen_20"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/dialog_dark_transparent"
        >
        <ImageView
            android:id="@+id/img_back"
            android:padding="@dimen/dimen_4"
            android:layout_width="@dimen/dimen_28"
            android:layout_height="@dimen/dimen_28"
            android:src="@drawable/ic_baseline_arrow_back_ios_24">

        </ImageView>

        <TextView
            android:gravity="center"
            android:text="@string/app_title"
            android:textSize="@dimen/font_24"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_phone"
            android:padding="@dimen/dimen_4"
            android:layout_width="@dimen/dimen_32"
            android:layout_height="@dimen/dimen_32"
            android:src="@drawable/phone_call">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_20"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/dialog_dark_transparent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>